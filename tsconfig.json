{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "types",
      "node_modules/vue/types",
      "node_modules/@types/"
    ],
    "baseUrl": "./",
    "paths": {
      "createApi": [
        "src/api/create-api-client",
        "src/api/create-api-server"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
