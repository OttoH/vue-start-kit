{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}
